# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Example: http://localhost:3001,https://yourdomain.com
CORS_ORIGINS=http://localhost:3001

# Database Configuration
# For standard PostgreSQL: DATABASE_URL="postgresql://<username>@localhost:5432/<db_name>?schema=public"
# For Prisma local server (run `npx prisma dev`): Use the generated URL
DATABASE_URL=your_db_url_here

# JWT Configuration
JWT_SECRET=your-own-local-secret

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=yourgmail@gmail.com
SMTP_PASS=your_16_char_app_password
SMTP_FROM=yourgmail@gmail.com
